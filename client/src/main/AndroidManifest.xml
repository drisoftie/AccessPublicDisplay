<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="de.uni.stuttgart.vis.access.client"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.uni.stuttgart.vis.access.client.act.ActScan"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="de.uni.stuttgart.vis.access.client.service.ServiceScan"
            android:enabled="true"
            android:exported="false">
        </service>

        <receiver android:name="de.uni.stuttgart.vis.access.client.brcast.BrRcvScan"/>
        <receiver android:name="de.uni.stuttgart.vis.access.client.brcast.BrRcvStop"/>

        <activity
            android:name="de.uni.stuttgart.vis.access.client.act.ActWeather"
            android:label="@string/title_activity_act_weather"
            android:parentActivityName="de.uni.stuttgart.vis.access.client.act.ActScan"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.uni.stuttgart.vis.access.client.act.ActScan"/>
        </activity>
        <activity
            android:name="de.uni.stuttgart.vis.access.client.act.ActPubTransport"
            android:label="@string/title_activity_act_pub_transport"
            android:parentActivityName="de.uni.stuttgart.vis.access.client.act.ActScan"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.uni.stuttgart.vis.access.client.act.ActScan"/>
        </activity>
    </application>

</manifest>
